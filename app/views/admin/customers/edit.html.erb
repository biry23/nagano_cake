<h2>
  <%= @customer.first_name %> <%= @customer.last_name %>さんの会員情報編集
</h2>

<table>
  <tbody>
    <% form_with model: @customer, url: admin_customer_path, method: :PATCH do |f| %>
    <tr>
      <th>会員ID</th>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <th>氏名</th>
      <td>
        <%= f.text_fild :first_name %>
        <%= f.text_fild :last_name %>
      </td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td>
        <%= f.text_fild :first_name_kana %>
        <%= f.text_fild :last_name_kana %>
      </td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= f.text_fild :postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= f.text_fild :address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= f.text_fild :</td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= f.email_field :email %></td>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <td>
        <%= f.radio_button :is_deleted, true %>有効
        <%= f.radio_button :is_deleted, false %>退会
      </td>
    </tr>
    <tr>
      <p><%= f.submit '変更を保存' %></p>
    </tr>
    <% end %>
  </tbody>
</table>
