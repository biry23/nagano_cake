<div class="container my-5">
  <div class="row">
    <div class="col-md-auto bg-light">
      <h4 class="font-weight-bold">
        ジャンル一覧・追加
      </h4>
    </div>
  </div>
  <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
    <div class="row my-3">
      <div class="col-md-4 font-weight-bold">
        ジャンル名
      </div>
      <div class="col-md-5 text-left">
        <%= f.text_field :name %>
      </div>
      <div class="col-md-3 text-left">
        <%= f.submit '新規登録', class:"btn btn-success" %>
      </div>
    </div>
  <% end %>
  <div class="row my-3">
    <div class="col-md-7">
      <table class="table">
        <thead class="bg-light">
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody class="table">
        <% @genres.each do |genre| %>
          <tr>
            <th class="row">
              <tb class="col-md-5">
                <%= genre.name %>
              </tb>
              <tb class="col-md-7 text-right">
                <%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %>
              </tb>
            </th>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

