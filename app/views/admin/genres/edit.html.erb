<div class="container my-5">
  <div class="row">
    <div class="col-md-auto bg-light">
      <h4 class="font-weight-bold">
        ジャンル編集
      </h4>
    </div>
  </div>
  <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
    <div class="row my-5">
      <div class="col-md-auto">
        ジャンル名
        <%= f.text_field :name %>
        <%= f.submit '変更を保存', class:'btn btn-success' %>
      </div>
    </div>
  <% end %>
</div>
