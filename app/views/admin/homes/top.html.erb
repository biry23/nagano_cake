<div class="container">
  <div class="row">
    <div class="p-3 mb-2 bg-secondary text-black">
      <h2>注文履歴一覧</h2>
    </div>
  </div>

  <table>
    <div class="row">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
    </div>

    <div class="row">
      <tbody>
        <% @orders.each do |order| %>
        <% total = 0 %>
        <% order.order_details.each do |order_detail| %>
        <% total = total + order_detail.amount %>
        <% end %>
        <tr>
          <td><%= link_to order.created_at, admin_order_path(order.id) %></td>
          <td><%= order.name %></td>
          <td><%= total %></td>
          <td><%= order.status %></td>
        </tr>
        <% end %>
      </tbody>
    </div>
  </table>
  <%= paginate @orders %>
</div>
