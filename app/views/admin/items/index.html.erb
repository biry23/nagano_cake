<div class="container my-5">
  <div class="row">
    <div class="col-md-auto bg-light">
      <h4 class="font-weight-bold">
        商品一覧
      </h4>
    </div>
    <div class="col text-right">
      <%= link_to "商品新規登録", new_admin_item_path %>
    </div>
  </div>
  <div class="row my-4">
    <table class="table">
      <thead class="bg-light">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td>
            <div class="link-dark"><%= link_to item.name, admin_item_path(item.id) %></div>
          </td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td>
            <% if item.is_active == true %>
            <div class="text-success">販売中</div>
            <% else item.is_active == false %>
            <div class="text-black-50">販売停止中</div>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col-md-12 text-center">
      <%= paginate @items %>
    </div>
  </div>
</div>


