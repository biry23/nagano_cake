<div class="container">
  <div class="row">
    <div class="col-md-auto md-3 bg-light">
      <h4>商品一覧</h4>
    </div>
    <%= link_to "商品新規登録", new_admin_item_path %>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td>
          <div class="link-dark"><%= link_to item.name, admin_item_path(item.id) %></div>
        </td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <td>
          <% if item.is_active == true %>
          <div class="text-success">販売中</div>
          <% else item.is_active == false %>
          <div class="text-black-50">販売停止中</div>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= paginate @items %>

