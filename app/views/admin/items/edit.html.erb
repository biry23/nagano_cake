<div class="container">
  <div class="row">
    <h2>商品編集</h2>
    <%= form_with model: @item, url: admin_item_path(item.id), method: :PATCH do |f| %>
    <p>商品画像</p>
    <%= f.file_field :image, accept: "image/*" %>
    <p>商品名</p>
    <%= f.text_field :name %>

    <p>商品説明</p>
    <%= f.text_area :introduction %>
    <p>ジャンル</p>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "-- 選択してください --" %>
    <!-- f.collection_select :保存先のカラム名, 選択肢に使うオブジェクト, :一つ目の引数に渡す値, :選択肢に使うカラム名, include_blank: "選択して下さい" -->


    <p>税抜価格</p>
    <%= f.text_field :price %>円

    <p>販売ステータス</p>
    <%= f.radio_button :is_active, true %>販売中
    <%= f.radio_button :is_active, false %>販売停止中
    <!--<= f.radio_button :保存先のカラム名, "送る値" %>-->
    <!--is_activeの送れる値はtrue,falseの二つのみ-->

    <p><%= f.submit '変更を保存' %></p>
    <% end %>
  </div>
</div>
