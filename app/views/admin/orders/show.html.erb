<h2>注文履歴詳細</h2>
<table>
  <thead>
    <tr>
      <th>購入者</th>
      <td><%= @order.customer.first_name %> <%= @order.customer.last_name %></td>
    </tr>
    <tr>
      <th>注文日</th>
      <td><%= @order.created_at %></td>
    </tr>
    <tr>
      <th>配送先</th>
      <td>〒<%= @order.postal_code %> <%= @order.address %></td>
    </tr>
    <tr>
      <th>支払方法</th>
      <td><%= @order.payment_method %></td>
    </tr>
    <tr>
      <th>注文ステータス</th>
      <td><%= @order.status %> <%= link_to "更新", admin_order_path(@order.id) %></td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
    </tr>
    <% @order_detail.each do |order_detail| %>
    <tr>
      <td><%= @order.name %></td>
      <td><%= order_detail.price %></td>
      <td><%= order_detail.amount.count %></td>
      <td><%= order_detail.price %></td>
      <td><%= order.maiking_status * order_detail.price %></td>
      <td><%= link_to "更新", admin_order_path(order.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>