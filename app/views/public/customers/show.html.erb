<div class="container">
  <div class="row">
    <div class="col-sm-auto sm-3 bg-light">
      <h4>マイページ</h4>
    </div>
  </div>

  <div class="row">
    <h4>登録情報</h4>
    <%= link_to "編集する", edit_customer_registration_path %>
  </div>

  <div class="row">
    <table class="table">
      <tbody>
        <tr>
          <th>氏名</th>
          <td><%= @customer.last_name %> <%= @customer.first_name %></td>
        </tr>
        <tr>
          <th>カナ</th>
          <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col-md-2">
      <p>配送先</p>
      <p>注文履歴</p>
    </div>
    <div class="col-md-5">
      <%= link_to "一覧を見る", addresses_path %></br>
      <%= link_to "一覧を見る", orders_path %>
    </div>
  </div>
</div>