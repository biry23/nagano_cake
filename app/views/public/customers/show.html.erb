<div class="container my-5">
  <div class="row">
    <div class="col-md-auto bg-light">
      <h4>マイページ</h4>
    </div>
  </div>

  <div class="row my-3">
    <div class="col-md-3">
      <h4 class="font-weight-bold">
        登録情報
      </h4>
    </div>
    <div class="col-md-6">
      <%= link_to "編集する", customers_edit_path, class:"btn btn-success" %>
    </div>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th class="bg-light">氏名</th>
          <td><%= @customer.last_name %> <%= @customer.first_name %></td>
        </tr>
        <tr>
          <th class="bg-light">カナ</th>
          <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th class="bg-light">郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th class="bg-light">住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th class="bg-light">電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th class="bg-light">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="row my-2">
    <div class="col-md-2 font-weight-bold">
      配送先
    </div>
    <div class="col-md-4">
      <%= link_to "一覧を見る", addresses_path, class:"btn btn-primary" %>
    </div>
  </div>
  <div class="row my-3">
    <div class="col-md-2 font-weight-bold">
      注文履歴
    </div>
    <div class="col-md-4">
      <%= link_to "一覧を見る", orders_path, class:"btn btn-primary" %>
    </div>
  </div>
</div>