<div class="container">
  <div class="row">
    <h2>商品一覧</h2>
    <%#= @item.where.count %>
  </div>
  <div class="row">
    <% @items.each do |item| %>
      <%= link_to item_path(item.id) do %>
        <%= image_tag item.image, size: "200x200" %>
      <% end %></br>
      <%= item.name %></br>
      ￥<%= item.price %>
    <% end %>
  </div>
</div>