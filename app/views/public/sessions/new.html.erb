<div class="container my-5">
  <div class="row my-3">
    <div class="col-md-auto md-3 bg-light">
      <h4>ログイン</h4>
    </div>
  </div>

  <div class="row my-3">
    <div class="col-md-1"></div>
      <div class="col-md-6-auto text-left bg-light">
        会員の方はこちらからログイン
      </div>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row my-3">
      <div class="col-md-2"></div>
      <div class="col-md-3">
        <%= f.label :メールアドレス %>
      </div>
      <div class="col-md-7">
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>
    </div>
    <div class="row my-3">
      <div class="col-md-2"></div>
      <div class="col-md-3">
        <%= f.label :パスワード %>
      </div>
      <div class="col-md-7">
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
    </div>
    <div class="row my-3">
      <% if devise_mapping.rememberable? %>
        <div class="col-md-2"></div>
        <div class="col-md-3"></div>
        <div class="col-md-7">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    </div>
    <div class="row my-3">
      <div class="col-md-12 text-center">
        <%= f.submit "Log in", class:"btn btn-primary" %>
      </div>
    </div>
    <% end %>

    <div class="row my-3">
      <div class="col-md-1"></div>
      <div class="col-md-6-auto text-left bg-light">
        会員登録がお済みでない方
      </div>
      <div class="col-md-5"></div>
    </div>
    <div class="row my-3">
      <div class="col-md-12 text-center">
        <%= link_to "こちら", new_customer_registration_path %> から新規会員登録を行ってください。
      </div>
    </div>
</div>
