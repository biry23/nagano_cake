<div class="container my-5">
  <div class="row">
    <div class="col-md-auto bg-light">
      <h4 class="font-weight-bold">
        配送先登録/一覧
      </h4>
    </div>
  </div>
  <%= form_with model: @address, url: addresses_path, method: :post do |f| %>
  <div class="row my-2">
    <div class="col-md-4">
      郵便番号(ハイフンなし)
    </div>
    <div class="col-md-4">
      <%= f.text_field :postal_code %>
    </div>
  </div>
  <div class="row my-2">
    <div class="col-md-4">
      住所
    </div>
    <div class="col-md-4">
      <%= f.text_field :address %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4">
      宛名
    </div>
    <div class="col-md-4">
      <%= f.text_field :name %>
    </div>
    <div class="col-md-2 text-right">
      <%= f.submit "新規登録", class:"btn btn-success" %>
    </div>
  </div>
  <% end %>
  <div class="row my-5">
    <table class="table table-bordered">
      <thaed class="bg-light">
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thaed>
      <tbody>
        <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集する", edit_address_path(address.id), class:"btn btn-success" %>
            <%= link_to "削除する", address_path(address.id), method: :delete, class:"btn btn-danger" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>