<h4>注文履歴詳細</h4>
<h4>注文情報</h4>
  <table class="table">
    <tbody>
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at %></td>
        <th>配送先</th>
        <td>
          <%= @order.postal_code %>
          <%= @order.address %>
          <%= @order.name %>
        </td>
        <th>支払方法</th>
        <td><%= @order.payment_method %></td>
        <th>ステータス</th>
        <td><%= @order.status %></td>
      </tr>
    </tbody>
  </table>
<h4>注文内容</h4>
  <table class="table">
    <thead>
      <tr>
        <th>商品</th>
        <th>単価(税込)</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
    </thead>
    <tbody>
      <% @order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.item.name %></td>
        <td><%= order_detail.price %></td>
        <td><%= order_detail.amount %></td>
        <td></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<h4>請求情報</h4>
  <table class="table">
    <tbody>
      <th>商品合計</th>
      <td><%= @total_price %></td>
      <th>配送料</th>
      <td><%= @order.shipping_cost %></td>
      <th>ご請求額</th>
      <td><%= @total_price += @order.shipping_cost %></td>
    </tbody>
  </table>