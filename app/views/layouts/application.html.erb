<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg">
        <div class="container">
          <div class="navbar-brand">
            <%= link_to "NaganoCake", root_path %>
          </div>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="navbar-collapse collapse show" id="navbarNavDropdown" style>
            <ul class="navbar-nav ml-auto">

              <% if customer_signed_in? %>

              <li class="nav-item">
                <%= link_to customers_path do %>
                マイページ
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to items_path do %>
                商品一覧
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to cart_items_path do %>
                カート
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to destroy_customer_session_path, method: :delete do %>
                ログアウト
                <% end %>
              </li>

              <% elsif admin_signed_in? %>
              <li class="nav-item">
                <%= link_to admin_items_path do %>
                商品一覧
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to admin_customers_path do %>
                会員一覧
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to admin_root_path do %>
                注文履歴一覧
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to admin_genres_path do %>
                ジャンル一覧
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to destroy_admin_session_path, method: :delete do %>
                ログアウト
                <% end %>
              </li>

              <% else %>
              <li class="nav-item">
                <%= link_to about_path do %>
                About
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to items_path do %>
                商品一覧
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to new_customer_registration_path do %>
                新規登録
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to customer_session_path do %>
                ログイン
                <% end %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>

    <footer>
      <div class="container">
        <div class="row">
          <div class="mx-auto">
            <p>footer</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
